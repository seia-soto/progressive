{
  "name": "watchtower",
  "version": "1.0.0",
  "main": "out/bin.js",
  "type": "module",
  "scripts": {
    "tsc": "tsc",
    "ava": "ava",
    "database:test": "pg-test",
    "database:apply": "pg-migrations apply --directory src/models/database/migrates",
    "database:sync": "pg-schema --directory src/models/database/schema",
    "build": "swc src -d out --config-file ../../.swcrc",
    "start": "node --loader ts-node/esm src/bin.ts",
    "test": ". scripts/test.sh"
  },
  "keywords": [],
  "author": "HoJeong Go <seia@outlook.kr>",
  "private": true,
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  },
  "dependencies": {
    "@databases/pg": "^5.4.1",
    "@databases/pg-schema-cli": "^4.3.0",
    "@databases/pg-typed": "^4.3.0",
    "@fastify/cookie": "^8.1.0",
    "@fastify/jwt": "^6.3.2",
    "@fastify/type-provider-typebox": "^2.3.0",
    "@sinclair/typebox": "^0.24.28",
    "argon2": "^0.29.1",
    "cbor": "^8.1.0",
    "fastify": "^4.5.3",
    "got": "^12.4.1",
    "vertical-radix": "github:seia-soto/vertical-radix"
  },
  "devDependencies": {
    "@databases/pg-migrations": "^5.0.1",
    "@databases/pg-test": "^3.1.2",
    "ava": "^4.3.3"
  }
}
